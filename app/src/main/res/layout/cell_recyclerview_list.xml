<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_cell_list"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/textView_cell_list_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="id"
        android:textSize="16sp"
        android:textColor="@color/colorTextBlack"
        android:letterSpacing="0.05"
        app:layout_constraintEnd_toEndOf="@+id/imageView_cell_list"
        app:layout_constraintStart_toStartOf="@+id/imageView_cell_list"
        app:layout_constraintTop_toTopOf="@+id/imageView_cell_list" />

    <TextView
        android:id="@+id/textView_cell_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="title"
        android:textAlignment="center"
        android:textColor="@color/colorTextBlack"
        android:textSize="14sp"
        android:letterSpacing="0.05"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_cell_list"
        app:layout_constraintEnd_toEndOf="@+id/imageView_cell_list"
        app:layout_constraintStart_toStartOf="@+id/imageView_cell_list" />
</androidx.constraintlayout.widget.ConstraintLayout>